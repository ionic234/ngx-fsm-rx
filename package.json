{
  "name": "ngx-fsm-rx",
  "description": "Angular wrapper around FsmRx, a Finite State Machine built upon RxJS and Typescript.",
  "keywords": [
    "Typescript",
    "RxJS",
    "FSM",
    "Compodoc",
    "Angular",
    "Schematics",
    "Storybook",
    "Mermaid"
  ],
  "author": "Chris Gregory",
  "license": "ISC",
  "scripts": {
    "build:dev": "ng build",
    "build": "ng build ngx-fsm-rx --configuration='production'",
    "postbuild": "copyfiles -f README.md dist/ngx-fsm-rx && copyfiles -f CHANGELOG.md dist/ngx-fsm-rx && copyfiles -f LICENSE dist/ngx-fsm-rx",
    "build:schematics": "cd ./projects/ngx-fsm-rx && npm run build",
    "build:pipe": "npm run lint && npm run test:ci && npm run compodoc:build && npm run build && npm run build:schematics",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --browsers=ChromeHeadless --watch=false",
    "coverage": "ng test --no-watch --code-coverage",
    "lint": "ng lint",
    "compodoc:build": "compodoc -p tsconfig.doc.json --disablePrivate",
    "compodoc:build-dev": "compodoc -p tsconfig.doc.json",
    "compodoc:serve": "compodoc -p tsconfig.doc.json -s -w --disablePrivate ",
    "clean:angular": "ng cache clean",
    "compodoc:serve-dev": "compodoc -p tsconfig.doc.json -s -w -open",
    "clean:node-modules": "if exist node_modules rd /s /q node_modules",
    "clean:coverage": "if exist coverage rd /s /q coverage",
    "clean:docs": "if exist documentation rd /s /q documentation",
    "clean:dist": "if exist dist rd /s /q dist",
    "clean": "npm run clean:coverage && npm run clean:docs  && npm run clean:dist && npm run clean:angular",
    "reinstall": "npm run clean && npm run clean:node-modules && npm i",
    "publish:verdaccio": "npm run reinstall && npm run build:pipe && cd ./dist/ngx-fsm-rx && npm publish --registry=http://localhost:4873",
    "build:schematics:test": "npm run clean:dist && npm run build && npm run build:schematics"
  },
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "deep-equal": "^2.2.3",
    "fsm-rx": "^1.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.12",
    "@angular-devkit/schematics": "^17.2.3",
    "@angular-eslint/builder": "16.3.1",
    "@angular-eslint/eslint-plugin": "16.3.1",
    "@angular-eslint/eslint-plugin-template": "16.3.1",
    "@angular-eslint/schematics": "16.3.1",
    "@angular-eslint/template-parser": "16.3.1",
    "@angular/cli": "^16.2.12",
    "@angular/compiler-cli": "^16.2.0",
    "@compodoc/compodoc": "^1.1.23",
    "@types/d3": "^7.4.3",
    "@types/deep-equal": "^1.0.4",
    "@types/dompurify": "^3.0.5",
    "@types/jasmine": "~4.3.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.51.0",
    "eslint-plugin-jsdoc": "^48.2.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^16.2.0",
    "prompts": "^2.4.2",
    "typescript": "~5.1.3"
  },
  "peerDependencies": {
    "mermaid": "^10.4.0"
  }
}